@model TaskProject.WebUI.Dtos.ProductQuery
@{
    ViewData["Title"] = "Product List";

}

<div >

            <h1>Product List</h1>
            <div class="row">
                @foreach (var product in ViewBag.Products as List<TaskProject.WebUI.Dtos.ResultProductDto>)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img class="card-img-top fixed-img-size" src="@product.imageUrl" alt="@product.name">
                            <div class="card-body">
                                <h5 class="card-title">@product.name</h5>
                                <p class="card-text">@product.description</p>
                                <p class="card-text">Price: $@product.price</p>
                                <div class="d-flex justify-content-between align-items-center">
                            <!-- you can add extra information here -->
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

    </div>
</div>

